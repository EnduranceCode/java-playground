<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="exercise.one.OnePresenter" prefWidth="800" prefHeight="600"
      spacing="25" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox xmlns:fx="http://javafx.com/fxml" spacing="15" styleClass="header">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <TextField fx:id="headerTextField" text="Write some text..." minWidth="300" prefWidth="300"/>

        <Button text="Submit" onAction="#headerSubmitButtonAction" minWidth="100" prefWidth="100"/>
    </HBox>

    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" styleClass="body">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <columnConstraints>
            <ColumnConstraints percentWidth="33.0" halignment="CENTER"/>
            <ColumnConstraints percentWidth="34.0" halignment="CENTER"/>
            <ColumnConstraints percentWidth="33.0" halignment="CENTER"/>
        </columnConstraints>

        <Text fx:id="bodyText" visible="true"
              GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3"/>
        <CheckBox fx:id="bodyCheckbox" onAction="#bodyCheckboxSelectedAction" visible="false"
                  GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3"/>

        <Button text="Print" onAction="#bodyPrintButtonAction" prefWidth="200"
                GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Button text="Next" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>
        <Button fx:id="checkboxButton" text="Checkbox" onAction="#bodyCheckboxButtonAction" prefWidth="200"
                GridPane.rowIndex="1" GridPane.columnIndex="2"/>
    </GridPane>
</VBox>
