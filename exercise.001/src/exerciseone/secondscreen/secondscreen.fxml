<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="exerciseone.secondscreen.SecondScreenPresenter"
      prefWidth="800" prefHeight="600" spacing="25" alignment="CENTER" styleClass="root">
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <HBox alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS" styleClass="second-screen-content">
        <TextField fx:id="secondScreenInput" promptText="Write some text..." minWidth="300" prefWidth="300"/>

        <Button fx:id="backToMainScreen" text="Back to the Main Screen" onAction="#showMainScreen"
                minWidth="200" prefWidth="200"/>
    </HBox>
</VBox>
